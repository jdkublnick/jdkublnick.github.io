<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101820"
    android:padding="16dp"
    tools:context=".sms_notifs">

    <!-- "SMS Permissions" (Title) -->
    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SMS Permissions"
        android:textColor="#00FFC6"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp" />

    <!-- SMS Permission Window/Square -->
    <androidx.cardview.widget.CardView
        android:id="@+id/permissionCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/textTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#1C1C1C"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Short Description -->
            <TextView
                android:id="@+id/textDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Allow EZInventory to send you SMS notifications when items get for low stock."
                android:textAlignment="center"
                android:textColor="#E0E0E0"
                android:textSize="16sp"
                android:layout_marginBottom="20dp" />

            <!-- "Check/Request" Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btnCheckPermission"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Check"
                    android:backgroundTint="#00FFC6"
                    android:textColor="#000000"
                    android:layout_marginEnd="8dp"
                    android:padding="10dp"
                    android:elevation="4dp" />

                <Button
                    android:id="@+id/btnRequestPermission"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Request"
                    android:backgroundTint="#00FFC6"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:elevation="4dp" />
            </LinearLayout>

            <!-- Permission Status -->
            <TextView
                android:id="@+id/textPermissionStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Permission not checked yet"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginTop="20dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Permissions Note -->
    <TextView
        android:id="@+id/textFooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You can still use EZInventory even without SMS permissions."
        android:textColor="#808080"
        android:textSize="13sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/permissionCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
